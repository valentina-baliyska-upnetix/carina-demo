{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "login": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "form": {
          "type": "object",
          "properties": {
            "password": {
              "type": "string"
            },
            "password.placeholder": {
              "type": "string"
            },
            "rememberme": {
              "type": "string"
            },
            "button": {
              "type": "string"
            },
            "signUp": {
              "type": "string"
            }
          },
          "required": [
            "password",
            "password.placeholder",
            "rememberme",
            "button",
            "signUp"
          ]
        },
        "messages": {
          "type": "object",
          "properties": {
            "error": {
              "type": "object",
              "properties": {
                "authentication": {
                  "type": "string"
                },
                "event-authentication": {
                  "type": "string"
                }
              },
              "required": [
                "authentication",
                "event-authentication"
              ]
            }
          },
          "required": [
            "error"
          ]
        },
        "password": {
          "type": "object",
          "properties": {
            "forgot": {
              "type": "string"
            }
          },
          "required": [
            "forgot"
          ]
        }
      },
      "required": [
        "title",
        "form",
        "messages",
        "password"
      ]
    }
  },
  "required": [
    "login"
  ]
}